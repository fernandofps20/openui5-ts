<mvc:View
	controllerName="com.myorg.myapp.controller.App"
	displayBlock="true"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc">
	<Shell id="shell">
		<App id="app" navigate="onNavigate">
			<MessagePage
				title="{i18n>app_title}"
				text="{i18n>app_title}"
				icon="sap-icon://accept"
				id="page"
				description="{i18n>app_description}">
				<buttons>
					<Button
						text="{i18n>btn_text}"
						press="sayHello" />
					<Button
						text="Open Fragment"
						press="onOpenFragment"/>
					<Button
						text="Next View"
						press="onNextView"/>
					<Button
						text="Show Busy Indicator"
						press="onShowBusyIndicator"/>
				</buttons>
			</MessagePage>
		</App>
	</Shell>
</mvc:View>